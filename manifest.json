{
  "name": "Subtext",
  "description": "Flags subtle gendered language in English Wikipedia articles.",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": [],
  "host_permissions": ["*://en.wikipedia.org/wiki/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Subtext"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
